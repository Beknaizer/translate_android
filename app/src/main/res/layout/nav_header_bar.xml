        android:onClick="ClickRegistration">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registration"
            android:padding="12dp"
            android:layout_marginStart="16dp"/>
